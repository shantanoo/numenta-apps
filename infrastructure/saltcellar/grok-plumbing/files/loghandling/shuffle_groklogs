# Shuffle grok logs, then run log uploader

export NUMENTA=/opt/numenta
export NUPIC="${NUMENTA}/nupic"

# Set PATH & PYTHONPATH from supervisord.vars so upload_logs.py doesn't
# choke when run as root by cron
source /etc/grok/supervisord.vars

LOG_D="${NUMENTA}/grok/logs"
UPLOADER="${NUMENTA}/grok/bin/upload_logs.py"
STAMPFILE=/etc/grok/firstboot.run

if [ -f "${STAMPFILE}" ]; then
  /usr/local/sbin/groklog_rotator "${LOG_D}"
  rotate_result=$?
  if [ "${rotate_result}" != 0 ]; then
    /usr/bin/logger -t grok "groklog_rotator exited abnormally with [${rotate_result}]"
  fi
fi

# Run log upload script
if [ -f "${STAMPFILE}" ]; then
  "${UPLOADER}" "${LOG_D}"
  upload_result=$?
  if [ ${upload_result} != 0  ]; then
    /usr/bin/logger -t grok "${UPLOADER}: grok log upload exited abnormally with [${upload_result}]"
  fi
fi
