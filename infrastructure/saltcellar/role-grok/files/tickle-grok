# Tickle grok, but only if we've already set up Grok. Makes supervisord run
# 'start all' so any processes have died are restarted.

NUMENTA=/opt/numenta
GROK_APP_CONF="${NUMENTA}/grok/conf/grok-api.conf"

if [ "$(/usr/bin/id -u)" -ne 0 ]; then
  echo "You are not root"
  exit 1
fi

if [ ! -f "${GROK_APP_CONF}" ]; then
  echo "Grok has not been configured yet"
  exit 0
fi

service grokservices tickle
