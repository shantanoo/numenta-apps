# This should only contain settings specific to Grok Plumbing AMIs

echo "Marking instance as being an AMI build..."
AMIBUILD_LOCK=/tmp/baking-ami
touch "${AMIBUILD_LOCK}"

install-prerequisites-and-update-repos() {
  echo "Purging old grok repo file..."
  rm -f /etc/yum.repos.d/grok.repo

  echo "Installing S3 support for yum..."
  yum install -y /tmp/yum-s3-0.2.4-1.noarch.rpm

  echo "Cleaning up stale yum data..."
  yum clean all

  # If you install these before installing yum-s3, yum will crash on start.
  for repo in grok-development.repo \
              grok-release-candidates.repo \
              grok-releases.repo \
              nta-carbonite.repo \
              nta-thirdparty.repo
  do
    echo "Installing ${repo}..."
    mv "/tmp/${repo}" /etc/yum.repos.d
  done
}

run-salt() {
  echo "Configuring Salt minion_id"
  echo
  echo "Setting Salt minion_id to grok-plumbing"
  echo grok-plumbing > /etc/salt/minion_id

  yum install -y grok-saltcellar

  echo "Running Salt..."
  salt-call --local state.highstate -l debug
  saltcode=$?
  echo
  echo "Salt run return code: ${saltcode}"
  exit "${saltcode}"
}

install-prerequisites-and-update-repos
run-salt
