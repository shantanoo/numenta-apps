<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- The number of bars to display on the anomaly charts -->
    <item name="chart_total_bars" type="integer">24</item>
    <!-- Supported aggregation types "Hour", "HalfDay", "Day", "Week". See "AggregationType" for values -->
    <string-array name="aggregation_type_options" tools:ignore="InconsistentArrays">
        <item>Hour</item>
        <item>HalfDay</item>
        <item>Day</item>
        <item>Week</item>
    </string-array>
    <!-- Default aggregation "Hour", "HalfDay", "Day", "Week". See "AggregationType" for values -->
    <item name="aggregation_type" type="string">Hour</item>
    <!-- The number of records for which the model is still learning -->
    <item name="learning_threshold" type="integer">1000</item>
    <!-- Control whether or not we should upload the android logs to the server -->
    <item name="upload_logs" type="bool">true</item>
    <!-- Maximum number of days to sync -->
    <item name="number_of_days_to_sync" type="integer">14</item>
    <!-- Yellow bar -->
    <item type="fraction" name="yellow_bar_floor">40%</item>
    <!-- Red bar -->
    <item type="fraction" name="red_bar_floor">50%</item>
    <!-- Should we use grouped / inbox-style notifications? -->
    <item name="group_notifications" type="bool">false</item>
    <!-- Application Name -->
    <string name="application_name">HTMCoreLibs</string>
    <!-- Control whether or not we should start the background services automatically -->
    <item name="start_services" type="bool">true</item>

</resources>
