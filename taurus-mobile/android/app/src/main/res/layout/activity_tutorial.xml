<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TutorialActivity" >

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_margin="0dp"
        style="@style/Tutorial.Pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    </android.support.v4.view.ViewPager>

    <Button
            android:id="@+id/tutorial_button_left"
            style="@style/Tutorial.Button"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="10dp"
            android:onClick="onLeftButtonClick"
            android:visibility="gone"
            android:text="@string/tutorial_skip" />
    <Button
            android:id="@+id/tutorial_button_right"
            style="@style/Tutorial.Button"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="10dp"
            android:onClick="onRightButtonClick"
            android:text="@string/tutorial_start" />

</merge>
