<resources>
    <declare-styleable name="InstanceAnomalyChartFragment">
        <attr name="showAnnotationList" format="boolean" />
        <attr name="showContextMenu" format="boolean" />
    </declare-styleable>
    <declare-styleable name="TimeSliderView">
        <attr name="backgroundColorLight" format="color|reference" />
        <attr name="backgroundColorDark" format="color|reference" />
        <attr name="strokeColor" format="color|reference" />
        <attr name="labelTextColor" format="color|reference" />
        <attr name="labelTextSize" format="dimension|reference" />
        <attr name="labelHeight" format="dimension|reference" />
        <attr name="showBackground" format="boolean" />
        <attr name="showLabel">
            <flag name="none" value="0"/>
            <flag name="top" value="1"/>
            <flag name="bottom" value="2"/>
        </attr>
    </declare-styleable>
</resources>
