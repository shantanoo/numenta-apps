<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colors -->
    <color name="MetricList.MetricNameListItem">#000000</color>

    <!-- Styles -->
    <style name="MetricAnomalyChart">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="MetricAnomalyChart.Title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:paddingTop">5sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25sp</item>
        <item name="android:textColor">@color/MetricList.MetricNameListItem</item>
    </style>

    <style name="MetricAnomalyChart.MetricName" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MetricAnomalyChart.Unit" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MetricAnomalyChart.Chart" parent="@style/AnomalyChart">
        <item name="android:layout_height">90dp</item>
    </style>

</resources>
