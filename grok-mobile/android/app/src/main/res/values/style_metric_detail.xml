<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colors -->
    <color name="MetricDetail.MetricName">#6f6f6f</color>
    <color name="MetricDetail.ServerName">#ffffff</color>
    <color name="MetricDetail.MetricValuesChartBackground">#000000</color>
    <color name="MetricDetail.MetricValuesChartStrokeColor">#2A99CE</color>
    <color name="MetricDetail.MetricValuesChartAxisColor">#7FFFFFFF</color>
    <color name="MetricDetail.MetricValuesChartTextColor">#FFFFFFFF</color>
    <color name="MetricDetail.Background">#C7CACA</color>
    <color name="MetricDetail.Header.Background">#ffffff</color>

    <!-- Styles -->
    <style name="MetricDetail" parent="@android:style/Theme.Panel">
        <item name="android:background">@color/MetricDetail.Background</item>
    </style>

    <style name="MetricDetail.Header" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">@color/MetricDetail.Header.Background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="MetricDetail.MetricName" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:textColor">@color/MetricDetail.ServerName</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MetricDetail.MetricValuesChart" parent="@android:style/Theme.Panel">
        <item name="android:background">@color/MetricDetail.MetricValuesChartBackground</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

</resources>
