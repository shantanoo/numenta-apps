<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="12dp" >

    <ImageView
        android:id="@+id/notification_delete"
        android:src="@drawable/ic_x_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
    />

    <ImageView
        android:id="@+id/notification_unread"
        android:src="@drawable/ic_red_notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:visibility="invisible"
    />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/notification_unread"
        android:layout_alignParentTop="true"
    />

    <TextView
        android:id="@+id/notification_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/notification_unread"
        android:layout_below="@+id/notification_time"
        android:paddingTop="4dp"
    />

</RelativeLayout>
