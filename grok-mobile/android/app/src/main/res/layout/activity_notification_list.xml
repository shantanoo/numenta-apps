<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/notification_listing"
              android:orientation="vertical"
              android:paddingLeft="20dp"
              android:paddingRight="20dp">

    <!-- Content -->

    <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/no_notifications_text"
            android:id="@+id/no_notifications_text"
            android:visibility="gone"/>

    <ListView
            android:id="@+id/notification_list_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/action_dismiss_all_notifications"
                style="@android:style/Widget.Button"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="16dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="@string/action_dismiss_all_notifications"/>

        <Button
                android:id="@+id/action_close_notifications"
                style="@android:style/Widget.Button"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="16dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="@string/action_close_notifications"/>


    </LinearLayout>


</LinearLayout>


